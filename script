function love.load()
    -- Set up the window
    love.window.setTitle("Custom Clean GUI")
    love.window.setMode(800, 600)

    -- Button properties
    button = {
        x = 350,
        y = 250,
        width = 100,
        height = 50,
        label = "Click Me",
        isHovered = false
    }
end

function love.update(dt)
    -- Check mouse position
    local mouseX, mouseY = love.mouse.getPosition()
    button.isHovered = mouseX > button.x and mouseX < button.x + button.width and
                       mouseY > button.y and mouseY < button.y + button.height
end

function love.draw()
    -- Draw the button
    if button.isHovered then
        love.graphics.setColor(0.7, 0.7, 0.7) -- Light grey when hovered
    else
        love.graphics.setColor(0.5, 0.5, 0.5) -- Dark grey otherwise
    end

    love.graphics.rectangle("fill", button.x, button.y, button.width, button.height)

    -- Draw the button label
    love.graphics.setColor(0, 0, 0) -- Black text
    love.graphics.printf(button.label, button.x, button.y + button.height / 4, button.width, "center")
end

function love.mousepressed(x, y, button, istouch, presses)
    if button == 1 and button.isHovered then -- Left mouse button
        print("Button clicked!")
    end
end
